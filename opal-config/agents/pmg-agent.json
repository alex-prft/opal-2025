{
  "agent_id": "pmg-maturity-generator",
  "name": "PMG Maturity Generator Agent",
  "description": "Generates comprehensive personalization maturity plans with 4-phase implementation roadmaps (Crawl → Walk → Run → Fly)",
  "version": "1.0.0",
  "category": "assessment",
  "capabilities": [
    "maturity_assessment",
    "phase_planning",
    "roadmap_generation",
    "resource_planning",
    "stakeholder_communication"
  ],
  "workflow_steps": [
    {
      "step": 1,
      "name": "Collect Requirements",
      "description": "Gather client information, capabilities, and objectives",
      "tool": "pmg-workflow-form",
      "inputs": {
        "client_name": "string",
        "industry": "string",
        "company_size": "enum[small,medium,large,enterprise]",
        "current_capabilities": "array[string]",
        "business_objectives": "array[string]",
        "timeline_preference": "enum[6-months,12-months,18-months,24-months]",
        "budget_range": "enum[under-100k,100k-500k,500k-1m,over-1m]",
        "recipients": "array[email]"
      },
      "validation": {
        "required": ["client_name", "business_objectives", "recipients"],
        "min_objectives": 1,
        "min_recipients": 1
      }
    },
    {
      "step": 2,
      "name": "Assess Current Maturity",
      "description": "Analyze current capabilities and determine maturity phase",
      "tool": "audience-insights",
      "analysis": {
        "capability_scoring": "weighted_assessment",
        "phase_determination": "capability_count + company_size + industry_factors",
        "confidence_calculation": "data_availability + assessment_depth"
      }
    },
    {
      "step": 3,
      "name": "Generate Phase Plans",
      "description": "Create detailed plans for each maturity phase",
      "tool": "pmg-phase-generator",
      "phases": {
        "crawl": {
          "focus": "Foundation Building",
          "duration": "3-6 months",
          "key_elements": ["data_collection", "basic_segmentation", "email_personalization"]
        },
        "walk": {
          "focus": "Structured Growth",
          "duration": "6-9 months",
          "key_elements": ["automated_campaigns", "web_personalization", "journey_optimization"]
        },
        "run": {
          "focus": "Advanced Execution",
          "duration": "9-18 months",
          "key_elements": ["real_time_personalization", "predictive_analytics", "omnichannel_orchestration"]
        },
        "fly": {
          "focus": "Mature Optimization",
          "duration": "18+ months",
          "key_elements": ["ai_optimization", "autonomous_campaigns", "experience_innovation"]
        }
      }
    },
    {
      "step": 4,
      "name": "Create Implementation Roadmap",
      "description": "Build timeline with milestones, dependencies, and success criteria",
      "tool": "roadmap-generator",
      "roadmap_structure": {
        "phase_1_immediate": "0-3 months",
        "phase_2_short_term": "3-6 months",
        "phase_3_medium_term": "6-12 months",
        "phase_4_long_term": "12+ months"
      }
    },
    {
      "step": 5,
      "name": "Generate CMP Campaign",
      "description": "Create campaign in CMP with complete maturity plan",
      "tool": "cmp-integration",
      "cmp_structure": {
        "campaign_type": "strategic_planning",
        "content_format": "structured_plan",
        "sharing_permissions": "stakeholder_access",
        "tracking_enabled": true
      }
    },
    {
      "step": 6,
      "name": "Notify Stakeholders",
      "description": "Send professional email notification with plan summary and CMP link",
      "tool": "sendgrid-notification",
      "email_template": "pmg_plan_notification",
      "includes": ["executive_summary", "phase_overview", "next_steps", "cmp_link"]
    }
  ],
  "output_format": {
    "maturity_plan": {
      "structure": "4_phase_framework",
      "includes": [
        "current_phase_assessment",
        "target_phase_recommendation",
        "detailed_phase_plans",
        "implementation_roadmap",
        "resource_requirements",
        "budget_estimates",
        "risk_mitigation"
      ]
    },
    "deliverables": [
      "executive_summary",
      "detailed_maturity_plan",
      "implementation_roadmap",
      "cmp_campaign_link",
      "stakeholder_notifications"
    ]
  },
  "success_criteria": [
    "maturity_plan_generated",
    "cmp_campaign_created",
    "stakeholders_notified",
    "roadmap_actionable",
    "phases_clearly_defined"
  ],
  "error_handling": {
    "validation_failures": "return_specific_errors",
    "tool_failures": "graceful_degradation",
    "partial_completion": "save_progress_state"
  },
  "integration_points": {
    "optimizely_odp": "audience_data_source",
    "optimizely_experiments": "historical_performance_benchmarking",
    "optimizely_cmp": "plan_storage_and_collaboration",
    "sendgrid": "stakeholder_communication"
  },
  "compliance": {
    "data_privacy": ["gdpr_compliant", "ccpa_compliant"],
    "security": ["encrypted_communication", "secure_authentication"],
    "audit": ["full_workflow_logging", "stakeholder_tracking"]
  }
}