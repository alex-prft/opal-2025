  "ui_configuration": {
    "layout": "dashboard_grid",
    "responsive": true,
    "filters": [
      "date_range",
      "content_type",
      "audience_segment",
      "channel"
    ],
    "export_options": ["pdf", "csv", "json"],
    "real_time_updates": true
  },
  "personal_configurator_integration": {
    "user_preferences": {
      "content_type_prioritization": "configurable",
      "metric_visibility": "user_defined",
      "dashboard_layout": "customizable",
      "alert_thresholds": "personalized"
    },
    "preference_keys": [
      "content.analytics.primary_metrics",
      "content.analytics.refresh_frequency",
      "content.analytics.chart_types"
    ]
  },
  "decision_layer_integration": {
    "impact_scoring": true,
    "confidence_weighting": true,
    "recommendation_engine": {
      "enabled": true,
      "threshold": 0.8,
      "auto_suggestions": true
    }
  },
  "brain_learning_integration": {
    "knowledge_updates": true,
    "pattern_recognition": true,
    "feedback_loop": "continuous",
    "learning_categories": [
      "content_performance_patterns",
      "audience_behavior_insights",
      "trend_predictions"
    ]
  },
  "validation_schema": {
    "required_fields": [
      "field",
      "agent",
      "type",
      "tool",
      "report",
      "dxp_sources"
    ],
    "field_formats": {
      "confidence": {
        "type": "number",
        "min": 0,
        "max": 1
      },
      "priority": {
        "type": "enum",
        "values": ["high", "medium", "low"]
      },
      "type": {
        "type": "enum",
        "values": ["AI-generated", "static", "hybrid"]
      }
    }
  },
  "error_handling": {
    "fallback_data": true,
    "graceful_degradation": true,
    "retry_policy": {
      "max_retries": 3,
      "backoff_strategy": "exponential"
    }
  },
  "monitoring": {
    "performance_tracking": true,
    "error_logging": true,
    "usage_analytics": true,
    "health_checks": "enabled"
  }
}