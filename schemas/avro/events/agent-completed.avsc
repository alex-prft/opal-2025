{
  "type": "record",
  "name": "AgentCompleted",
  "namespace": "com.opal.events.agent",
  "doc": "Event emitted when an individual OPAL agent finishes processing",
  "fields": [
    {
      "name": "schema_version",
      "type": "string",
      "default": "1.0.0",
      "doc": "Schema version for backward compatibility tracking"
    },
    {
      "name": "event_id",
      "type": "string",
      "doc": "Unique event identifier for deduplication"
    },
    {
      "name": "correlation_id",
      "type": "string",
      "doc": "Correlation ID for distributed tracing across services"
    },
    {
      "name": "workflow_id",
      "type": "string",
      "doc": "Associated workflow identifier - part of idempotency key"
    },
    {
      "name": "agent_id",
      "type": {
        "type": "enum",
        "name": "AgentType",
        "symbols": [
          "experiment_blueprinter",
          "audience_suggester",
          "content_review",
          "roadmap_generator",
          "integration_health",
          "personalization_idea_generator",
          "cmp_organizer",
          "customer_journey",
          "geo_audit"
        ]
      },
      "doc": "OPAL agent that completed processing - part of idempotency key"
    },
    {
      "name": "offset",
      "type": ["null", "int"],
      "default": null,
      "doc": "Event sequence number within workflow - part of idempotency key"
    },
    {
      "name": "execution_status",
      "type": {
        "type": "enum",
        "name": "ExecutionStatus",
        "symbols": ["success", "failure", "timeout"]
      },
      "doc": "Agent execution result status"
    },
    {
      "name": "processing_time_ms",
      "type": ["null", "long"],
      "default": null,
      "doc": "Time taken to process in milliseconds"
    },
    {
      "name": "agent_data",
      "type": ["null", {
        "type": "record",
        "name": "AgentData",
        "fields": [
          {
            "name": "recommendations",
            "type": ["null", {"type": "array", "items": "string"}],
            "default": null,
            "doc": "Recommendations generated by the agent"
          },
          {
            "name": "confidence_score",
            "type": ["null", "double"],
            "default": null,
            "doc": "Agent's confidence in its output (0.0-1.0)"
          },
          {
            "name": "data_sources_analyzed",
            "type": ["null", {"type": "array", "items": "string"}],
            "default": null,
            "doc": "List of data sources the agent analyzed"
          },
          {
            "name": "error_message",
            "type": ["null", "string"],
            "default": null,
            "doc": "Error message if execution failed"
          },
          {
            "name": "retry_count",
            "type": ["null", "int"],
            "default": null,
            "doc": "Number of retry attempts made"
          },
          {
            "name": "metadata",
            "type": ["null", {"type": "map", "values": "string"}],
            "default": null,
            "doc": "Additional agent-specific metadata"
          }
        ]
      }],
      "default": null,
      "doc": "Agent-specific output data and metrics"
    },
    {
      "name": "timestamp",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      "doc": "Event timestamp in milliseconds since epoch"
    },
    {
      "name": "source_system",
      "type": "string",
      "default": "opal-webhook",
      "doc": "System that generated this event"
    },
    {
      "name": "environment",
      "type": {
        "type": "enum",
        "name": "Environment",
        "symbols": ["development", "staging", "production"]
      },
      "default": "development",
      "doc": "Environment where the event occurred"
    },
    {
      "name": "signature_valid",
      "type": ["null", "boolean"],
      "default": null,
      "doc": "Whether HMAC signature verification passed"
    },
    {
      "name": "payload_size_bytes",
      "type": ["null", "long"],
      "default": null,
      "doc": "Size of the original webhook payload in bytes"
    }
  ]
}